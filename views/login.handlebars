<link rel="stylesheet" href="/css/homepage.css">

<div class="center-container">
  <h2>Register / Login to your Account</h2>
<form class="form register-form">
  <form class="form-group">
    <label for="email-register">Email:</label>
    <input class="form-input" type="text" id="email-register" />
  </form>
  <form class="form-group">
    <label for="password-register">Password:</label>
    <input class="form-input" type="password" id="password-register" />
  </form>
  <form class="form-group">
    <button class="btn btn-primary" type="submit">Register</button>
  </form>
</div>


<form class="form login-form">
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Login</button>
  </div>
</form>


<script src="/js/login.js"></script>
<script src="/js/register.js"></script>